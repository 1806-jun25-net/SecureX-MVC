@model SecureXWebApp.Models.Account

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                @*Checkbox here for choosing savings or checking account*@
                @Html.RadioButtonFor(m => m.AccountType, "Savings")
                @Html.RadioButtonFor(m => m.AccountType, "Checking")
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Funds" class="control-label"></label>
                <input asp-for="Funds" class="form-control" />
                <span asp-validation-for="Funds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to account</a>
</div>

