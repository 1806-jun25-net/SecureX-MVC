@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/BankThree.JPG" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                     The Bank that people trust all over the world.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/BankOne.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    The easiest way to do online banking to this day!
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/BankTwo.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    The Bank loves to gives back.
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>The Bank</h2>
        <ul>
            <li>Easy quick banking on the go from anywhere at anytime.</li>
            <li>Using the newest of the new security to keep your money and information safe.</li>
            <li>The Bank that puts people first!</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Customers</h2>
        <ul>
            <li>Stay up to date on your credit.</li>
            <li>View your bank account funds and know just how much money is at your disposal</li>
            <li>Transfer money from one account to another in seconds.</li>
            <li>Setup Autopay so that your bills are always paid on time!</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Employees</h2>
        <ul>
            <li>Check which customers are at which bank.</li>
            <li>Check the different bank reserves to make sure there is plenty of money to go around.</li>
            <li>View each customers details to make sure it all stay up todate.</li>
        </ul>
    </div>
</div>
