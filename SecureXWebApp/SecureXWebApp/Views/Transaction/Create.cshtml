@model SecureXWebApp.Models.TransactionViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <input type="radio" id="deposit" name="transaction" value="Deposit" checked />
                <label asp-for="Type">Deposit</label>
                <input type="radio" id="withdrawl" name="transaction" value="Withdrawl" />
                <label asp-for="Type">Withdrawl</label>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.AccountId" class="control-label"></label><br />
                <div class="form-group">
                    @Html.DropDownListFor(x => Model.SelectedId, new SelectList(Model.AccountIds, Model.SelectedId), htmlAttributes: new { @class = "form-control", @id = "AccountId" })
                    @Html.ValidationMessageFor(x => x.Transaction.AccountId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Recipient" class="control-label"></label>
                <input asp-for="Transaction.Recipient" class="form-control" />
                <span asp-validation-for="Transaction.Recipient" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* instance a datetime.now object here and send this as the parameter for datetime*@
            </div>
            <div class="form-group">
                <label asp-for="Transaction.TransactionAmount" class="control-label"></label>
                <input asp-for="Transaction.TransactionAmount" class="form-control" />
                <span asp-validation-for="Transaction.TransactionAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

